<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Capital Complaint System</title>
  <link rel="stylesheet" href="/administration/public/css/profile.css">
  <script src="/administration/public/js/profile.js" defer></script>
  
</head>
<body>

  <!-- Header -->
  <header>
    <h1 class="main-title">Capital Complaint System</h1>
  </header>

  <!-- Navbar -->
  <div class="navbar">
    <nav>
        <a href="/administration/home">Home</a>
         <a href="/administration/dashboard">Dashboard</a>
               

        <!-- User Complaints Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">User Complaints</button>
            <div class="dropdown-content">
                <a href="/administration/all-complaints">All Complaints</a>
                <a href="/administration/not-processed">Not Processed Yet</a>
                <a href="/administration/in-process">In Process</a>
                <a href="/administration/closed-complaints">Closed Complaints</a>
            </div>
        </div>

        <!-- Reports Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Reports</button>
            <div class="dropdown-content">
                <a href="/administration/user-reports">Users Report</a>
                <a href="/administration/complaints-report">Complaints Report</a>
            </div>
        </div>

        <!-- Search Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Search</button>
            <div class="dropdown-content">
                <a href="/administration/search-user">User Search</a>
                <a href="/administration/search-complaints">Search Complaints</a>
            </div>
        </div>
    </nav>

    <div class="profile-container">
        <div class="dropdown">
          <button class="dropbtn">Menu</button>
          <div class="dropdown-content">
              <a href="/settings">Settings</a>
              <a href="/profile">Administration Profile</a>
              <a href="/logout">Logout</a>
          </div>
      </div>
      </div>
    </div>

<!-- Profile Content -->
<div class="container">
    <div class="profile-card">
      <h2>administration Profile</h2>
      <div class="profile-details">
        <p><strong>Username:</strong><%= user.first_name %> <%= user.last_name %></p> <!-- Correct field names -->
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Contact Number:</strong> <%= user.contactNo %></p> <!-- Correct field names -->
      <p><strong>Registered On:</strong> <%= user.regDate.toLocaleDateString() %></p>
      <!-- <p><strong>Total Complaints Submitted:</strong> <%= user.complaintCount %></p> -->
      <p><strong>Role:</strong> <%= user.role %></p>
      </div>
    </div>
  </div>
  
</body>
</html>
