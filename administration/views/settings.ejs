<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Capital Complaint System</title>
  <link rel="stylesheet" href="/administration/public/css/settings.css">
  <script src="/administration/public/js/settings.js" defer></script>
  
</head>
<body>

  <!-- Header -->
  <header>
    <h1 class="main-title">Capital Complaint System</h1>
  </header>

  <!-- Navbar -->
  <div class="navbar">
    <nav>
        <a href="/administration/home">Home</a>
         <a href="/administration/dashboard">Dashboard</a>
               

        <!-- User Complaints Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">User Complaints</button>
            <div class="dropdown-content">
                <a href="/administration/all-complaints">All Complaints</a>
                <a href="/administration/not-processed">Not Processed Yet</a>
                <a href="/administration/in-process">In Process</a>
                <a href="/administration/closed-complaints">Closed Complaints</a>
            </div>
        </div>

        <!-- Reports Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Reports</button>
            <div class="dropdown-content">
                <a href="/administration/user-reports">Users Report</a>
                <a href="/administration/complaints-report">Complaints Report</a>
            </div>
        </div>

        <!-- Search Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Search</button>
            <div class="dropdown-content">
                <a href="/administration/search-user">User Search</a>
                <a href="/administration/search-complaints">Search Complaints</a>
            </div>
        </div>
    </nav>

    <div class="profile-container">
        <div class="dropdown">
          <button class="dropbtn">Menu</button>
          <div class="dropdown-content">
              <a href="/settings">Settings</a>
              <a href="#help">Profile</a>
              <a href="/logout">Logout</a>
          </div>
      </div>
      </div>
    </div>

    <div class="settings-container">
        <h2>Change Password</h2>
        <form id="password-form">
            <!-- Current Password -->
            <div class="password-field">
                <label for="current-password">Current Password</label>
                <input type="password" id="current-password" placeholder="Enter your current password">
                <i class="fa-regular fa-eye" data-input="current-password"></i>
            </div>

            <!-- New Password -->
            <div class="password-field">
                <label for="new-password">New Password</label>
                <input type="password" id="new-password" placeholder="Enter your new password">
                <i class="fa-regular fa-eye" data-input="new-password"></i>
            </div>

            <!-- Confirm New Password -->
            <div class="password-field">
                <label for="confirm-password">Confirm New Password</label>
                <input type="password" id="confirm-password" placeholder="Confirm your new password">
                <i class="fa-regular fa-eye" data-input="confirm-password"></i>
            </div>

            <button type="submit">Change Password</button>
        </form>
    </div>
  
</body>
</html>
