<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Capital Complaint System</title>
  <link rel="stylesheet" href="/administration/public/css/search-complaints.css">
  <script src="/administration/public/js/search-complaints.js" defer></script>
  
</head>
<body>

  <!-- Header -->
  <header>
    <h1 class="main-title">Capital Complaint System</h1>
  </header>

  <!-- Navbar -->
  <div class="navbar">
    <nav>
        <a href="/administration/home">Home</a>
         <a href="/administration/dashboard">Dashboard</a>
               

        <!-- User Complaints Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">User Complaints</button>
            <div class="dropdown-content">
                <a href="/administration/all-complaints">All Complaints</a>
                <a href="/administration/not-processed">Not Processed Yet</a>
                <a href="/administration/in-process">In Process</a>
                <a href="/administration/closed-complaints">Closed Complaints</a>
            </div>
        </div>

        <!-- Reports Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Reports</button>
            <div class="dropdown-content">
                <a href="/administration/user-reports">Users Report</a>
                <a href="/administration/complaints-report">Complaints Report</a>
            </div>
        </div>

        <!-- Search Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Search</button>
            <div class="dropdown-content">
                <a href="/administration/search-user">User Search</a>
                <a href="/administration/search-complaints">Search Complaints</a>
            </div>
        </div>
    </nav>

    <div class="profile-container">
        <div class="dropdown">
          <button class="dropbtn">Menu</button>
          <div class="dropdown-content">
              <a href="/settings">Settings</a>
              <a href="#help">Profile</a>
              <a href="/logout">Logout</a>
          </div>
      </div>
      </div>
    </div>


   <!-- Main Content -->
   <div class="container">
    <!-- Centered Heading -->
    <h1 class="text-center">Search Complaints</h1>
  
    <!-- Search Section -->
    <div class="search-section">
      <form id="search-form" action="/admin/search-complaints" method="GET">
        <!-- Search Bar -->
        <input type="text" id="search-input" name="searchQuery" placeholder="Search by Complaint Number, Complainant Name, Category, Status" required>
        
        <!-- Search Button -->
        <button type="submit">Search</button>
      </form>
    </div>
  
    <!-- Display Results Section -->
    <section id="search-results">
      <% if (complaints && complaints.length > 0) { %>
        <table class="complaints-table">
          <thead>
            <tr>
              <th>Complaint Number</th>
              <th>Complainant Name</th>
              <th>Category</th>
              <th>Status</th>
              <th>Description</th>
              <th>Location</th>
              <th>Registration Date</th>
            </tr>
          </thead>
          <tbody>
            <% complaints.forEach(complaint => { %>
              <tr>
                <td><%= complaint.complaintNumber %></td>
                <td><%= complaint.complainantName %></td>
                <td><%= complaint.category %></td>
                <td><%= complaint.status %></td>
                <td><%= complaint.description %></td>
                <td><%= complaint.location %></td>
                <td><%= new Date(complaint.regDate).toDateString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No complaints found matching your query.</p>
      <% } %>
    </section>
  </div>
  
</body>
</html>
