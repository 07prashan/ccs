<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post a Complaint</title>
    <link rel="stylesheet" href="/css/post-complain.css">
    <!-- Leaflet CSS for the map -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
</head>
<body>
    <header>
        <h1 class="main-title">Capital Complaint System</h1>
    </header>
    
    <!-- Navbar -->
    <div class="navbar">
        <nav>
            <a href="/home">Home</a>
            <a href="/dashboard">Dashboard</a>
            <a href="/post-complaint">Post a Complaint</a>
            <a href="/Complaint-history">Complaint History</a>
            <a href="#contact-us">Contact Us</a>
        </nav>
        <div class="profile-container">
            <div class="dropdown">
                <button class="dropbtn">Profile</button>
                <div class="dropdown-content">
                    <a href="#settings">Settings</a>
                    <a href="#help">Help</a>
                    <a href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Post a Complaint Section -->
    <main class="post-complaint">
        <h2>Post a Complaint</h2>
         <!-- Success Message (to be displayed dynamically) -->
        <div id="success-message"></div>
        <form action="/submit-complaint" method="POST" id="complaint-form" enctype="multipart/form-data">
            

            <!-- Complaint Category -->
            <div class="form-group">
                <label for="category">Complaint Category</label>
                <select id="category" name="category" required>
                    <option value="waste issues">Waste Issues</option>
                    <option value="electricity issue">Electricity Issue</option>
                    <option value="water issues">Water Issues</option>
                    <option value="road issues">Road Issues</option>
                    <option value="theft/violence">Theft/Violence</option>
                </select>
            </div>
            
            <!-- Complaint Description -->
            <div class="form-group">
                <label for="description">Complaint Description</label>
                <textarea id="description" name="description" rows="5" required placeholder="Describe your complaint..."></textarea>
            </div>

            <!-- Location Section -->
            <div class="form-group">
                <label for="location">Location</label>
                <input type="text" id="location" name="location" placeholder="Select location from the map" readonly required>
                <div id="map" style="height: 400px; width: 100%;"></div>
            </div>

            <!-- File Upload -->
            <div class="form-group">
                <label for="file">Upload Image/Video (Optional)</label>
                <input type="file" id="file" name="file" accept="image/*, video/*">
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="submit-btn">Submit Complaint</button>
            </div>
        </form>
    </main>

    <!-- Leaflet JS for the map -->
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="/js/post-complain.js"></script>
</body>
</html>
