<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/admin/public/css/dashboard.css">
    <script src="/admin/public/js/dashboard.js" defer></script>
</head>
<body>
    <header>
        <h1 class="main-title">Capital Complaint System</h1>
    </header>

   <!-- Navbar -->
  <div class="navbar">
    <nav>
        <a href="/admin/home">Home</a>

        <!-- Admin Management Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Admin Management</button>
            <div class="dropdown-content">
                <a href="/admin/dashboard">Dashboard</a>
                <a href="/admin/add-category">Add Category</a>
                <a href="/admin/manage-users">Manage Users</a>
            </div>
        </div>

        <!-- User Complaints Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">User Complaints</button>
            <div class="dropdown-content">
                <a href="/admin/all-complaints">All Complaints</a>
                <a href="/admin/not-processed">Not Processed Yet</a>
                <a href="/admin/in-process">In Process</a>
                <a href="/admin/closed-complaints">Closed Complaints</a>
            </div>
        </div>

        <!-- Reports Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Reports</button>
            <div class="dropdown-content">
                <a href="/admin/user-reports">Users Report</a>
                <a href="/admin/complaints-report">Complaints Report</a>
            </div>
        </div>

        <!-- Search Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Search</button>
            <div class="dropdown-content">
                <a href="/admin/search-user">User Search</a>
                <a href="/admin/search-complaints">Search Complaints</a>
            </div>
        </div>
    </nav>

    <div class="profile-container">
        <div class="dropdown">
          <button class="dropbtn">Menu</button>
          <div class="dropdown-content">
              <a href="/settings">Settings</a>
              <a href="/profile">Profile</a>
              <a href="/logout">Logout</a>
          </div>
      </div>
      </div>
    </div>


    <main class="dashboard-container">
        <h2>Dashboard</h2>
        <div class="stats-grid">
            <!-- Total Users -->
            <div class="stat-card total-users">
                <h3><%= stats.totalUsers %></h3>
                <p>Total Users</p>
            </div>
        
            <!-- Total Categories -->
            <div class="stat-card total-categories">
                <h3><%= stats.totalCategories %></h3>
                <p>Total Categories</p>
            </div>
        
            <!-- Total Complaints -->
            <div class="stat-card total-complaints">
                <h3><%= stats.totalComplaints %></h3>
                <p>Total Complaints</p>
            </div>
        
            <!-- Pending Complaints -->
            <div class="stat-card pending-complaints">
                <h3><%= stats.pendingComplaints %></h3>
                <p>Pending Complaints</p>
            </div>
        
            <!-- In Process Complaints -->
            <div class="stat-card in-process-complaints">
                <h3><%= stats.inProcessComplaints %></h3>
                <p>In Process</p>
            </div>
        
            <!-- Closed Complaints -->
            <div class="stat-card closed-complaints">
                <h3><%= stats.closedComplaints %></h3>
                <p>Closed Complaints</p>
            </div>
        </div>
    </main>

</body>
</html>
