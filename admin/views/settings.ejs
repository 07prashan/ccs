<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Capital Complaint System</title>
  <link rel="stylesheet" href="/admin/public/css/settings.css">
  <script src="/admin/public/js/settings.js" defer></script>
  
</head>
<body>

  <!-- Header -->
  <header>
    <h1 class="main-title">Capital Complaint System</h1>
  </header>

  <!-- Navbar -->
  <div class="navbar">
    <nav>
        <a href="/admin/home">Home</a>

        <!-- Admin Management Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Admin Management</button>
            <div class="dropdown-content">
                <a href="/admin/dashboard">Dashboard</a>
                <a href="/admin/add-category">Add Category</a>
                <a href="/admin/manage-users">Manage Users</a>
            </div>
        </div>

        <!-- User Complaints Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">User Complaints</button>
            <div class="dropdown-content">
                <a href="/admin/all-complaints">All Complaints</a>
                <a href="/admin/not-processed">Not Processed Yet</a>
                <a href="/admin/in-process">In Process</a>
                <a href="/admin/closed-complaints">Closed Complaints</a>
            </div>
        </div>

        <!-- Reports Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Reports</button>
            <div class="dropdown-content">
                <a href="/admin/user-reports">Users Report</a>
                <a href="/admin/complaints-report">Complaints Report</a>
            </div>
        </div>

        <!-- Search Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Search</button>
            <div class="dropdown-content">
                <a href="/admin/search-user">User Search</a>
                <a href="/admin/search-complaints">Search Complaints</a>
            </div>
        </div>
    </nav>

    <div class="profile-container">
      <div class="dropdown">
        <button class="dropbtn">Menu</button>
        <div class="dropdown-content">
            <a href="/settings">Settings</a>
            <a href="/profile">Profile</a>
            <a href="/logout">Logout</a>
        </div>
    </div>
    </div>
  </div>
  <div class="settings-container">
    <h2>Change Password</h2>
    <form id="password-form">
        <!-- Current Password -->
        <div class="password-field">
            <label for="current-password">Current Password</label>
            <input type="password" id="current-password" placeholder="Enter your current password">
            <i class="fa-regular fa-eye" data-input="current-password"></i>
        </div>

        <!-- New Password -->
        <div class="password-field">
            <label for="new-password">New Password</label>
            <input type="password" id="new-password" placeholder="Enter your new password">
            <i class="fa-regular fa-eye" data-input="new-password"></i>
        </div>

        <!-- Confirm New Password -->
        <div class="password-field">
            <label for="confirm-password">Confirm New Password</label>
            <input type="password" id="confirm-password" placeholder="Confirm your new password">
            <i class="fa-regular fa-eye" data-input="confirm-password"></i>
        </div>

        <button type="submit">Change Password</button>
    </form>
</div>
</body>
</html>
