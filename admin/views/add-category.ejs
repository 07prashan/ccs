<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/admin/public/css/dashboard.css">
    <script src="/admin/public/js/dashboard.js" defer></script>
</head>
<body>
    <header>
        <h1 class="main-title">Capital Complaint System</h1>
    </header>

   <!-- Navbar -->
  <div class="navbar">
    <nav>
        <a href="/admin/home">Home</a>

        <!-- Admin Management Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Admin Management</button>
            <div class="dropdown-content">
                <a href="/admin/dashboard.ejs">Dashboard</a>
                <a href="/admin/add-category">Add Category</a>
                <a href="/admin/manage-users">Manage Users</a>
            </div>
        </div>

        <!-- User Complaints Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">User Complaints</button>
            <div class="dropdown-content">
                <a href="/admin/all-complaints">All Complaints</a>
                <a href="/admin/not-processed">Not Processed Yet</a>
                <a href="/admin/in-process">In Process</a>
                <a href="/admin/closed-complaints">Closed Complaints</a>
            </div>
        </div>

        <!-- Reports Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Reports</button>
            <div class="dropdown-content">
                <a href="/admin/user-reports">Users Report</a>
                <a href="/admin/complaints-report">Complaints Report</a>
            </div>
        </div>

        <!-- Search Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Search</button>
            <div class="dropdown-content">
                <a href="/admin/search-user">User Search</a>
                <a href="/admin/search-complaints">Search Complaints</a>
            </div>
        </div>
    </nav>

    <div class="profile-container">
        <div class="dropdown">
            <button class="dropbtn">Profile</button>
            <div class="dropdown-content">
                <a href="/settings">Settings</a>
                <a href="#help">Help</a>
                <a href="/logout">Logout</a>
            </div>
        </div>
    </div>
</div>


<section class="categories-section">
    <h1>Categories</h1>

    <!-- Display Existing Categories -->
    <div class="existing-categories">
        <h2>Existing Categories</h2>
        <ul id="category-list">
            <% categories.forEach(category => { %>
                <li><%= category.name %></li>
            <% }) %>
        </ul>
    </div>

    <!-- Add New Category Form -->
    <div class="add-category-form">
        <h2>Add New Category</h2>
        <form action="/admin/add-category" method="POST" id="add-category-form">
            <label for="category-name">Category Name:</label>
            <input type="text" id="category-name" name="category-name" required>

            <label for="category-description">Category Description:</label>
            <textarea id="category-description" name="category-description" required></textarea>

            <button type="submit">Add Category</button>
        </form>
    </div>
</section>


</body>
</html>
