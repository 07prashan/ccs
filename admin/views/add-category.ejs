<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/admin/public/css/add-category.css">
    <script src="/admin/public/js/add-category.js" defer></script>
</head>
<body>
    <header>
        <h1 class="main-title">Capital Complaint System</h1>
    </header>

   <!-- Navbar -->
  <div class="navbar">
    <nav>
        <a href="/admin/home">Home</a>

        <!-- Admin Management Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Admin Management</button>
            <div class="dropdown-content">
                <a href="/admin/dashboard.ejs">Dashboard</a>
                <a href="/admin/add-category">Add Category</a>
                <a href="/admin/manage-users">Manage Users</a>
            </div>
        </div>

        <!-- User Complaints Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">User Complaints</button>
            <div class="dropdown-content">
                <a href="/admin/all-complaints">All Complaints</a>
                <a href="/admin/not-processed">Not Processed Yet</a>
                <a href="/admin/in-process">In Process</a>
                <a href="/admin/closed-complaints">Closed Complaints</a>
            </div>
        </div>

        <!-- Reports Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Reports</button>
            <div class="dropdown-content">
                <a href="/admin/user-reports">Users Report</a>
                <a href="/admin/complaints-report">Complaints Report</a>
            </div>
        </div>

        <!-- Search Dropdown -->
        <div class="dropdown">
            <button class="dropbtn">Search</button>
            <div class="dropdown-content">
                <a href="/admin/search-user">User Search</a>
                <a href="/admin/search-complaints">Search Complaints</a>
            </div>
        </div>
    </nav>

    <div class="profile-container">
        <div class="dropdown">
            <button class="dropbtn">Profile</button>
            <div class="dropdown-content">
                <a href="/settings">Settings</a>
                <a href="#help">Help</a>
                <a href="/logout">Logout</a>
            </div>
        </div>
    </div>
</div>
<section class="categories-section">
    <h1>Categories</h1>
<!-- 
    Success/Error Messages
    <% if (locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <% if (locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %> -->

    <!-- Add New Category Form -->
    <div class="add-category-form">
        <h2>Add New Category</h2>
        <form id="categoryForm" action="/admin/add-category" method="POST">
            <div class="form-group">
                <label for="name">Category Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="form-group">
                <label for="description">Description:</label>
                <textarea class="form-control" id="description" name="description" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Add Category</button>
        </form>
    </div>

    <!-- Display Existing Categories -->
    <div class="existing-categories">
        <h2>Existing Categories</h2>
        <div id="category-list">
            <% categories.forEach((category) => { %>
                <div class="category-item">
                    <h3><%= category.name %></h3>
                    <p><%= category.description %></p>
                    <button class="edit-btn" data-id="<%= category._id %>">Edit</button>
                    <button class="delete-btn" data-id="<%= category._id %>">Delete</button>
                </div>
            <% }) %>
        </div>
        
    </div>
</section>

</body>
</html>
